@import "./theme.styl"
body, ol, ul, h1, h2, h3, h4, h5, h6, p, th, td, dl, dd, form, fieldset, legend, input, textarea, select {
  margin: 0;
  padding: 0
}

/*控制整个滚动条*/
::-webkit-scrollbar {
  width: 10px;
  height: 10px;
  background-clip: padding-box;
}

/*滚动条中间滑动部分*/
::-webkit-scrollbar-thumb {
  background-color: #BDBFC5;
  border-radius: 5px;
}



