// 清除浮动
.clearfix:after
  content ''
  height 0
  display block
  clear both

body
  .circle
    position relative
    &:after
      position absolute
      top -10px
      right -12px
      display block
      width 24px
      height 24px
      content ' '
      border 6px solid $color-focus
      border-radius: 50%
      background: none
      z-index -1


.circle-mini
  position relative
  &:after
    position absolute
    top -5px
    right -10px
    display block
    width 18px
    height 18px
    content ' '
    border 4px solid $color-focus
    border-radius: 50%
    background: none
    z-index -1

.circle-big
  position relative
  &:after
    position absolute
    top -9px
    right -14px
    display block
    width 28px
    height 28px
    content ' '
    border 7px solid $color-focus
    border-radius: 50%
    background: none
    z-index -1

.inline-block
  display inline-block
