// 清除浮动
.clearfix:after
  content ''
  height 0
  display block
  clear both

body
  .circle
    position relative
    &:after
      position absolute
      top -10px
      right -12px
      display block
      width 24px
      height 24px
      content ' '
      border 6px solid $color-focus
      border-radius: 50%
      background: none
      z-index -1


.circle-mini
  position relative
  &:after
    position absolute
    top -5px
    right -10px
    display block
    width 18px
    height 18px
    content ' '
    border 4px solid $color-focus
    border-radius: 50%
    background: none
    z-index -1

.circle-big
  position relative
  &:after
    position absolute
    top -9px
    right -14px
    display block
    width 28px
    height 28px
    content ' '
    border 7px solid $color-focus
    border-radius: 50%
    background: none
    z-index -1

.inline-block
  display inline-block

.solid-circle
  position relative
  &:after
    position: absolute;
    top: 0
    right: 5px
    display: block;
    width: 8px;
    height: 8px;
    content: ' ';
    background: #e94328;
    border-radius: 50%;
    z-index: -1;

.box-card
  border-radius-5()
  shadow-2-down()
  position relative
  background-color #fff
  border 1px solid $color-line-1
  color $color-content
  //&:hover
  //  .box-title
  //    span
  //      &:before
  //        width 100%
  .box-title
    font-weight 600
    position: relative;
    padding-top 10px
    span
      position relative
      &:before
        position absolute
        top -10px
        content ' '
        display block
        height 2px
        width 28px
        background $color-content
        transition width .3s ease-in-out
  .box-content
    position: relative;
    padding-top 15px
    display flex
    flex-direction column

