// 清除浮动
.clearfix:after
  content ''
  height 0
  display block
  clear both

// 分割线
.parting-line
  height 4px
  border 0
  background-color #ddd
  margin 20px 0
  background-image repeating-linear-gradient(-45deg,#fff,#fff 4px,transparent 0,transparent 8px)

// 触摸变色
.hover-active
  cursor pointer
  transition all .3s ease-in-out
  &:hover
    color $active-color

body
  .circle
    position relative
    &:after
      position absolute
      top -10px
      right -12px
      display block
      width 24px
      height 24px
      content ' '
      border 6px solid $color-focus
      border-radius: 50%
      background: none
      z-index -1


.circle-mini
